{% extends 'base.html.twig' %}



{% block body %}

<div class="about-hero">
    <div class="container-fluid hero wow fadeInUp">
        <h1 id="hero-title">
            Contactez-nous
        </h1>
    </div>


    <div class="container content" style="margin: auto;">
        <p class="wow fadeInUp" style="margin: 2em; text-align: center">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Repellat optio expedita minus accusantium facere placeat magnam maiores nulla magni dolore blanditiis eligendi.</p>

        <form method="POST" action="">
